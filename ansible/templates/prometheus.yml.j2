global:
  scrape_interval: 15s
  evaluation_interval: 15s

  external_labels:
    monitor: 'ubuntu-monitor'

# Alertmanager configuration (optional)
alerting:
  alertmanagers:
    - static_configs:
        - targets: []

rule_files:
  # - "alert.rules.yml"

scrape_configs:

  # ==============================
  # Prometheus Self Monitoring
  # ==============================
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  # ==============================
  # Node Exporter (Ubuntu server metrics)
  # ==============================
  # - job_name: "node_exporter"
  # static_configs:
  #   - targets: ["localhost:9100"]

  # ==============================
  # Example Backend App (Optional)
  # ==============================
    - job_name: "backend_app"
      metrics_path: /metrics
      static_configs:
        - targets: ["{{ backend_private_ip }}:8000"]

  # ==============================
  # Node Exporter (Ubuntu server metrics)
  # ==============================
  - job_name: "node_exporter"
    static_configs:
      - targets: ["{{ frontend_private_ip }}:9100", "{{ backend_private_ip }}:9100"]
